<h2><%= t.nav.forwardings %> </h2>
<div class="row">
  <div class="span6">
    <a class="btn btn-primary" id="newForwarding" role="button">
      <i class="icon-plus-sign"></i> <%= t.forwardings.new %>
    </a>
  </div>
</div>

<%= erb :'forwardings/_new' %>


<div class="row">
  <div class="span12">
    <hr>
  </div>
</div>

<script id="forwardingEditTemplate" type="text/x-jquery-tmpl">
  <form class="form-inline">
    <input type="text" pattern="^([\w+-.%]+@[\w-.]+\.[A-Za-z]{2,4},?)+$" class="input-small"  name="destination" value="{1}" required>
    <button class="btn btn-primary" type="button" data-email="{0}"><%=  t.actions.save %></button>
    <button class="btn btn-secondary" type="button" data-destination="{1}"><%=  t.actions.cancel %></button>
  </form>
</script>

<div id="forwardingsList">
<% @forwardings.each { |forwarding| %>
    <div class="row">
      <div class="span4"><%= forwarding.source %></div>
      <div class="span6 editable"><%= forwarding.destination %></div>
      <div class="span2">
        <a class="editForwarding" data-email="<%= forwarding.source %>"><i class="icon-pencil"></i></a>
        <a class="deleteForwarding" href="#" data-email="<%= forwarding.source %>"><i class="icon-minus-sign"></i></a>
      </div>
    </div>
<% } %>
</div>

<%= erb :confirmation %>